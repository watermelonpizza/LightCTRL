                    <Rectangle Fill="{ThemeResource ContentDialogBackgroundThemeBrush}" HorizontalAlignment="Center" Width="100"/>
                    <TextBlock FontSize="22" HorizontalAlignment="Center">Hello</TextBlock>
                </Grid>
            </ListViewItem>-->
        </ListView>
